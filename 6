function factorial($numero) {
    if ($numero < 0) {
        return "No se puede calcular el factorial de un nÃºmero negativo.";
    }
    
     if ($numero === 0) {
        return 1;
    }

    $resultado = 1;
    for ($i = 1; $i <= $numero; $i++) {
        $resultado *= $i;
    }
    return $resultado;
}

$numero = 5;
echo "El factorial de $numero es: " . factorial($numero);
