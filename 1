<?php


function encontrarMaximo($num1, $num2, $num3) {
    $maximo = $num1;

    if ($num2 > $maximo) {
        $maximo = $num2;
    }

    if ($num3 > $maximo) {
        $maximo = $num3;
    }

    return $maximo;
}


$num1 = 10;
$num2 = 20;
$num3 = 15;
echo "El m√°ximo de $num1, $num2 y $num3 es: " . encontrarMaximo($num1, $num2, $num3);
