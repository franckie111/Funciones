function contarMayusculasMinusculas($cadena) {
    $numMayusculas = 0;
    $numMinusculas = 0;
    
    for ($i = 0; $i < strlen($cadena); $i++) {
         if (ctype_upper($cadena[$i])) {
            $numMayusculas++;
        }
         if (ctype_lower($cadena[$i])) {
            $numMinusculas++;
        }
    }
    
      return array('mayusculas' => $numMayusculas, 'minusculas' => $numMinusculas);
}

$cadena = "Hola Mundo";
$resultado = contarMayusculasMinusculas($cadena);
echo "Número de letras mayúsculas: " . $resultado['mayusculas'] . "\n";
echo "Número de letras minúsculas: " . $resultado['minusculas'];
